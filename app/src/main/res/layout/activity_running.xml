<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.folkcat.run.activity.RunningActivity">
    <LinearLayout
        android:fitsSystemWindows="true"
        android:clipToPadding="true"
        android:background="@color/teal_light"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:text="时间"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <TextView
                android:id="@+id/tv_time"
                android:text="00:00"
                android:gravity="center|top"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:text="距离"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <TextView
                android:id="@+id/tv_distance"
                android:text="0.0KM"
                android:gravity="center|top"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:text="速度"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <TextView
                android:id="@+id/tv_speed"
                android:text="20KM/H"
                android:gravity="center|top"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:clickable="true"
                android:textColor="@drawable/btn_text_color"
                android:id="@+id/tv_over"
                android:textSize="26dp"
                android:gravity="center"
                android:text="结束"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:background="@color/teal_light"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">

        <com.amap.api.maps2d.MapView
            android:id="@+id/map"
            android:layout_marginBottom="-20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.amap.api.maps2d.MapView>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/bg_light_gray"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <ImageView
            android:id="@+id/iv_take_photo"
            android:clickable="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_image_with_border"
            android:src="@mipmap/ic_camera"
            android:padding="20dp"
            android:layout_width="@dimen/photo_thumbnail_length"
            android:layout_height="@dimen/photo_thumbnail_length"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/photo_thumbnail_length">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:layout_marginLeft="10dp"
                    android:background="@color/bg_white"
                    android:layout_width="@dimen/photo_thumbnail_length"
                    android:layout_height="@dimen/photo_thumbnail_length"/>
                <View
                    android:layout_marginLeft="10dp"
                    android:background="@color/bg_white"
                    android:layout_width="@dimen/photo_thumbnail_length"
                    android:layout_height="@dimen/photo_thumbnail_length"/>
                <View
                    android:layout_marginLeft="10dp"
                    android:background="@color/bg_white"
                    android:layout_width="@dimen/photo_thumbnail_length"
                    android:layout_height="@dimen/photo_thumbnail_length"/>
                <View
                    android:layout_marginLeft="10dp"
                    android:background="@color/bg_white"
                    android:layout_width="@dimen/photo_thumbnail_length"
                    android:layout_height="@dimen/photo_thumbnail_length"/>
                <View
                    android:layout_marginLeft="10dp"
                    android:background="@color/bg_white"
                    android:layout_width="@dimen/photo_thumbnail_length"
                    android:layout_height="@dimen/photo_thumbnail_length"/>

            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:background="@color/bg_light_gray"
                android:layout_marginLeft="10dp"
                android:id="@+id/rv_bottom_thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </FrameLayout>


    </LinearLayout>

</LinearLayout>
